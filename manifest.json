{
    "manifest_version": 3,
    "name": "Sweeper",
    "description": "An extension to solve minesweeper",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Sweeper",
        "default_popup": "popup/popup.html"
    },
    "permissions": [],
    "host_permissions": [
        "https://minesweeperonline.com/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": ["solver.js", "foreground.js"],
        "matches": [
            "https://minesweeperonline.com/*"
        ]
    }]
}
